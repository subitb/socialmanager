@using (Ajax.BeginForm("PostVideo", "FacebookPhoto",
            null,
            new
            {
                enctype = "multipart/form-data",
                id = "formPhotoUpload"
            }))
{
    <div id="divLoadingPhotos"
         style="display:none; z-index:1000; position:absolute;
                     top:50%; left:50%; opacity:0.85;
                    -moz-opacity:0.85; filter:alpha(opacity=85); ">
        <img src="~/images/loader.gif" />
    </div>
    <div class="form-group">
        <input id="TargetAlbumId" name="TargetAlbumId" type="hidden" />
        <textarea name="PhotoDescription"
                  id="PhotoDescription"
                  class="form-control"
                  rows="2"
                  style="max-width:100%;"
                  placeholder="New Photo Description"></textarea>
        <div class="input-group">
            @*Utilizing Twitter Bootstrap stylized file upload buttons
            Created By: Cory LaViska
            Article: Whipping File Inputs Into Shape with Bootstrap 3
            reference: 
                http://www.abeautifulsite.net/whipping-file-inputs-into-shape-with-bootstrap-3/*@  
            <span class="input-group-btn">
                <span class="btn btn-primary btn-file">
                    Browse&hellip; <input type="file" 
                                          name="PhotosToUpload" 
                                          id="PhotosToUpload" />
                </span>
            </span>
            <input type="text" class="form-control" readonly />
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit" 
                        id="SubmitPhoto"
                        name="SubmitPhoto">Add Photo</button>
            </span>
        </div>
    </div>

}
